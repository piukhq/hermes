#!/usr/bin/with-contenv /bin/bash

ENVFILE="/usr/local/src/hermes/.env"

touch $ENVFILE
chown apps:apps $ENVFILE

echo "HERMES_DATABASE_URL=postgres://$DATABASE_USER:$DATABASE_PASS@$DATABASE_IP:$DATABASE_PORT/$DATABASE_NAME" > $ENVFILE
echo "HERMES_DEBUG=$DEBUG" >> $ENVFILE
echo "HERMES_MEDIA_URL=$MEDIA_URL" >> $ENVFILE
echo "MIDAS_URL=$MIDAS_URL" >> $ENVFILE
echo "HECATE_URL=$HECATE_URL" >> $ENVFILE
echo "LETHE_URL=$LETHE_URL" >> $ENVFILE
echo "METIS_URL=$METIS_URL" >> $ENVFILE
echo "FACEBOOK_CLIENT_SECRET=$FACEBOOK_CLIENT_SECRET" >> $ENVFILE
echo "SWAGGER_BASE_PATH=$SWAGGER_BASE_PATH" >> $ENVFILE
